{
  "name": "tsm",
  "version": "0.0.1",
  "description": "Compiles TypeScript modules defined using tsm (typescript module definition)",
  "bin": "./bin/tsm.js",
  "main": "lib/tsm.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theblacksmith/tsm.git"
  },
  "keywords": [
    "TypeScript",
    "compilation",
    "automation"
  ],
  "author": "The Blacksmith (a.k.a. Saulo Vallory)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theblacksmith/tsm/issues"
  },
  "homepage": "https://github.com/theblacksmith/tsm",
  "dependencies": {
    "typescript-compiler": "~0.9.1",
    "underscore": "~1.5.2",
    "underscore.string": "~2.3.3",
    "colors": "~0.6.2",
    "glob": "~3.2.6",
    "minimatch": "~0.2.12",
    "fs-extra": "~0.8.1",
    "source-map-support": "~0.2.4",
    "commander": "~2.0.0",
    "inquirer": "~0.3.5",
    "nomnom": "~1.6.2",
    "async": "~0.2.9"
  },
  "tsm": {
    "src": [
      "main.js",
      "lib/**/*.ts",
      "!lib/**/*.d.ts"
    ],
    "submodules": {},
    "dependencies": {}
  },
  "devDependencies": {
    "source-map-support": "~0.2.3",
    "mocha": "~1.14.0",
    "grunt": "~0.4.1",
    "grunt-mocha-test": "~0.7.0",
    "grunt-typescript": "~0.2.4",
    "grunt-contrib-clean": "~0.5.0",
    "load-grunt-tasks": "~0.2.0",
    "chai": "~1.8.1",
    "temp": "~0.6.0"
  }
}
